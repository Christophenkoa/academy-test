{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"baseUrl": "./src",
		"paths": {
			"@*": ["*"]
		},
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": false
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.json"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}